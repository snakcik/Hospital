<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospital.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/lib/font-awesome/css/all.min.css" />
    
</head>
<body>
    <header>
<nav
        class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3"
      >
        <div class="container-fluid">
          <a
            class="navbar-brand"
            asp-area=""
            asp-controller="Home"
            asp-action="Index"
            >Hospital</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target=".navbar-collapse"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div
            class="navbar-collapse collapse d-sm-inline-flex justify-content-between"
          >
            <ul class="navbar-nav flex-grow-1">
              <li class="nav-item">
                <a
                  class="nav-link text-dark"
                  asp-area=""
                  asp-controller="Home"
                  asp-action="Index"
                  >Home</a>
              </li>

              <li class="nav-item">
                <a
                  style="position: absolute"
                  class="nav-link text-dark"
                  asp-area=""
                  asp-controller="HumanResource"
                  asp-action="List"
                  ><div class="dropdown">
                    <a
                      class="btn dropdown-toggle"
                      href="#"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                      style="
                        position: relative;
                        border: none;
                        outline: none;
                        padding-left: 0px;
                        padding-top: 9px;
                        color: black;
                      "
                    >
                      Human Resource
                    </a>

                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" asp-controller="Title" asp-action="List">Title </a></li>
                      <li>
                      <a class="dropdown-item" asp-controller="Departman" asp-action="List">Departman</a>
                      </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Policlinic" asp-action="List">Policlinic</a>
                                        </li>
                      <li>
                        <a class="dropdown-item" asp-controller="Personell" asp-action="List">Personell</a>
                      </li>
                    </ul>
                  </div>
                </a>
              </li>
              <li class="nav-item">
                <a
                  style="position: absolute"
                  class="nav-link text-dark"
                  asp-area=""
                  asp-controller="Storage"
                  asp-action="List"
                  ><div class="dropdown">
                    <a class="btn dropdown-toggle"
                      href="#"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                      style="
                        position: relative;
                        border: none;
                        outline: none;
                        padding-top: 9px;
                        padding-left: 0px;
                        color: black;

                      "
                    >
                      Storage
                    </a>

                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" asp-controller="Inventory" asp-action="List">Inventory</a></li>
                    </ul>
                  </div>
                </a>
              </li>
              <li class="nav-item"></li>
                <a style="position: absolute"
                  class="nav-link text-dark"
                  asp-area=""
                  asp-controller="Storage"
                  asp-action="List"><div class="dropdown">
                    <a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"style="position: relative; border: none;outline: none; padding-top: 9px; color: black; padding-left: 0px;" >
                      Reception
                    </a>

                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" asp-controller="Patient" asp-action="List" >Patient</a></li>
                    </ul>
                  </div>
                </a>
              </li>
              <li class="nav-item"></li>
                <a
                  style="position: absolute"
                  class="nav-link text-dark"
                  asp-area=""
                  asp-controller="Storage"
                  asp-action="List"
                  ><div class="dropdown">
                    <a
                      class="btn dropdown-toggle"
                      href="#"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                      style="
                        position: relative;
                        border: none;
                        outline: none;
                        padding-top: 9px;
                        color: black;
                        padding-left: 0px;
                      "
                    >
                      Doctor
                    </a>

                    <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Doctor" asp-action="List" >Patient Procedures</a></li>
                    </ul>
                  </div>
                </a>
              </li>
              
            </ul>
                    <ul style="padding-top:20px;" >
                        <form action='@Url.Action("List")' method="get" id="searchForm">
                            <input type="text" id="keyvalue" name="keyvalue" placeholder="Search by Name" />
                            <button type="submit" class=" btn btn-secondary"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
                        </form>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Hospital - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/lib/font-awesome/js/all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
            <script>
            $(document).ready(function () {
                $("#keyvalue").val((new URL(location.href)).searchParams.get('keyvalue'))
            });
        </script>
    
</body>
</html>
