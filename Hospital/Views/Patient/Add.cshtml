@using Hospital.Dtos

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

@model PatientDto

 @if(ViewBag.Patient==false)
   
    {
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
    } 
@if (ViewBag.Validation != null)
{
    <div id="alertMessage" class="alert alert-danger" role="alert" >
        @ViewBag.Validation
    </div>
}



<form method="post">
    
    <div class="row">
        <div class="col-6">
            <input asp-for="Name" class="form-control" placeholder=" Name" required />
            <br />
            <input asp-for="LastName" class="form-control" placeholder="Last Name" required />
            <br />
            <input asp-for="IdentityNumber" class="form-control" placeholder="Identity Number" required />
            <br />
            <input asp-for="Phone" class="form-control" placeholder="Phone Number" required />
            <br />
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <br />
            <input asp-for="Illness" class="form-control" placeholder="Illness" required />
            <br />
            <input asp-for="Diagnosis" class="form-control" placeholder="Diagnosis" />
            <br />
            <select class="form-control" asp-for="Policlinic" asp-items="ViewBag.Policlinics" required></select>
            <br />
            <select class="form-control" asp-for="Personell" asp-items="ViewBag.Personells" required></select>
            <br />

            <input type="submit" value="Kaydet" class="btn btn-primary" />

        </div>


    </div>

</form>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $(".alert").fadeOut("slow", function () {
                $(this).remove();
            });
        }, 2000);
    });
</script>
