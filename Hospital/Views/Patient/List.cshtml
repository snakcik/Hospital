@using Hospital.Dtos

@{
    ViewData["Title"] = "List";
}

<h1>Patient</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>

}

@model List<PatientDto>
<script>
    function Delete() {
        var button = event.target.closest('a');
        var deleteMessage = button.getAttribute('id') + " Are you sure you want to delete this item ?";
        
        return confirm(deleteMessage)
    }

</script>

<a asp-controller="Patient" asp-action="Add" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create</a>

<table class="table table-striped">
    <thead>
        <tr>

            <th scope="col"> Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Identity Number </th>
            <th scope="col">Phone</th>
            <th scope="col">E-Mail</th>
            <th scope="col">Actions</th>
            <th scope="col">Prescription Actions</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr id="@item.Id">
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.IdentityNumber</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>

                <td>
                    <a href="Delete/@item.Id" onclick="return Delete();" id="@item.Name" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete </a>  &nbsp;
                    <a href="Update/@item.Id" class="btn btn-primary"  ><i class="fa-solid fa-pen-to-square"></i> Edit</a>&nbsp;
                    <a href="Detail/@item.Id" class="btn btn-warning" style="color:white"><i class="fa-solid fa-circle-info"></i> Detail</a>
                </td>
                <td>
                    <a asp-controller="Prescription" asp-action="add" asp-route-patientId="@item.Id" class="btn btn-info" style="color:white"><i class="fa-solid fa-prescription-bottle-medical"></i>Add Prescription</a>
                    <a asp-controller="Prescription" asp-action="PrescriptionDetail" asp-route-patientId="@item.Id" class="btn btn-success" style="color:white"><i class="fa-solid fa-prescription-bottle-medical"></i>Show Prescription</a>

                </td>

            </tr>
        }


    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $(".alert").fadeOut("slow", function () {
                $(this).remove();
            });
        }, 2000);
    });
</script>
