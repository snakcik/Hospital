@using Hospital.Dtos

@{
    ViewData["Title"] = "List";
}
@model List<DepartmanDto>

<h1>List</h1>

<a asp-controller="Departman" asp-action="add" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create</a>

<table class="table table-striped">
    <thead>
        <tr>

            <th scope="col">Category Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr id="@item.Id">
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td> <a hred="" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete </a>  &nbsp;<a href="" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Edit</a> </td>

            </tr>
        }


    </tbody>
</table>