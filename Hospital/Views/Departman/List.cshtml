@using Hospital.Dtos

@{
    ViewData["Title"] = "List";
}
@model List<DepartmanDto>

<h1>Departman</h1>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>

}
@if (TempData["Attached"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Attached"]
    </div>

}
<script>
    function Delete() {
        var button = event.target.closest('a');
        var deleteMessage = button.getAttribute('id') + " Are you sure you want to delete this item ?";
       
        return confirm(deleteMessage)
    }
    
 </script>


<a asp-controller="Departman" asp-action="add" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create</a>

<table class="table table-striped">
    <thead>
        <tr>

            <th scope="col">Category Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr id="@item.Id">
                <td>@item.Name</td>
                <td>@item.Description</td>
               <td> 
                    <a href="Delete/@item.Id" onclick="return Delete();" id="@item.Name"  class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete </a>  &nbsp;
                    <a href="Update/@item.Id" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                </td>

            </tr>
        }


    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $(".alert").fadeOut("slow", function () {
                $(this).remove();
            });
        }, 2000);
    });
</script>